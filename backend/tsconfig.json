{
  "compilerOptions": {
    "target": "es2015",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "Node16"
    }
  },
  "include": [
    "**/*.ts"
, "../prompts.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}